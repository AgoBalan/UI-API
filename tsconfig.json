{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],        // include Node.js type definitions
    "rootDir": "./src",       // where your TypeScript source files live
    "outDir": "./dist"        // where compiled JavaScript files should go
  },
  "include": ["src"],         // compile everything inside src/
  "exclude": ["node_modules"] // ignore dependencies
}
