{
  "name": "apiuirepo",
  "version": "1.0.0",
  "description": "complete repo to do api and ui testing using playwright in Typescript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test tests/ui",
    "test:smoke": "playwright test tests/ui --grep '@smoke'",
    "test:api": "playwright test tests/api --grep '@contract'",
    "test:apiLogin": "playwright test tests/api/auth/login.contract.spec.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3"
  },
  "author": "Ago Balan Benedict",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  }
}
